# YouTube Downloader Environment Configuration

# Download Directory
YOUTUBE_DOWNLOAD_DIR=/path/to/your/output/directory

# Concurrent downloads
YOUTUBE_MAX_CONCURRENT=1

# Default quality (best, 1080p, 720p, 480p, audio_only)
YOUTUBE_DEFAULT_QUALITY=best

# Cookie settings - see README.md
YOUTUBE_COOKIE_METHOD=file
YOUTUBE_COOKIE_FILE=/path/to/your/youtube/cookie/file

# Retry settings
YOUTUBE_RETRY_COUNT=2
YOUTUBE_AUTO_RETRY=true

# Other settings
YOUTUBE_CHECK_DUPLICATES=true
YOUTUBE_BANDWIDTH_LIMIT=0

# Output settings
YOUTUBE_OUTPUT_TEMPLATE=%(playlist_index)02d-%(title)s.%(ext)s
YOUTUBE_CREATE_PLAYLIST_FOLDER=true
YOUTUBE_SANITIZE_FILENAMES=true
YOUTUBE_PREFERRED_FORMAT=mp4
YOUTUBE_USE_POSTPROCESSING=true

# Logging
YOUTUBE_LOGS_DIR=logs
YOUTUBE_LOG_LEVEL=INFO